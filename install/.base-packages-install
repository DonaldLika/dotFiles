#!/bin/bash

[ `id -u` -eq 0 ] || { echo 'Root access required!'; exit 1;}

Packages=(
   git
   neovim
   zsh
   curl
   openjdk-8-jdk
   openjdk-11-jdk
   httpie
   "code --classic"
)

# Packages installation

for package in "${Packages[@]}";
do 
   echo "Installing $package"
   if ! apt-get install $package; then
      echo "$package failed to be installed with 'apt-get'."
      exit 1
   fi
done

